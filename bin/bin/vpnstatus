#!/usr/bin/env bash

set -e
set -u
set -o pipefail

connection="$(pgrep -a openvpn$ || true | head -n 1 | awk '{ print $NF }' | cut -d '.' -f 1)"

if [ ! -n "$connection" ]; then
    echo "disconnected"
    exit 0
fi

active_vpn_name="$(echo "$connection" | sed 's/.*-config-//')"

# Check ip.
ip="$(dig +short myip.opendns.com @resolver1.opendns.com)"

# Find VPN config.
for i in $HOME/.openvpn/*.conf; do
    vpn_ip="$(cat ~/.openvpn/server.conf | grep remote | awk '{print $2}')"
    vpn_name="$(basename "$i" '.conf')"

    if [ "$ip" = "$vpn_ip" ]; then
        echo "connected" "$vpn_name" "$ip"
        exit 0
    elif [ "$active_vpn_name" = "$vpn_name" ]; then
        echo "connecting" "$active_vpn_name" "$ip"
        exit 0
    fi
done

echo "connecting" "<unknown>" "$ip"
exit 1
