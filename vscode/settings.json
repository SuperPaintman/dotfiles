{
  /** Internal */
  // Editor
  "editor.fontFamily": "'JetBrains Mono', 'DejaVu Sans Mono', Consolas, 'Courier New', monospace",
  "editor.fontSize": 12,
  "editor.fontWeight": "normal",
  "editor.fontLigatures": false,
  "editor.rulers": [80, 120],
  "editor.tabSize": 2,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.insertSpaces": true,
  "editor.wordWrap": "off",
  "editor.autoClosingBrackets": "never",
  "editor.renderWhitespace": "all",
  "editor.renderControlCharacters": true,
  "editor.renderLineHighlight": "line",
  "editor.dragAndDrop": false,
  "editor.formatOnSave": true,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.snippetSuggestions": "bottom",
  "editor.selectionClipboard": false,
  // Workbench
  "workbench.colorTheme": "Atom One Dark",
  "workbench.welcome.enabled": false,
  "workbench.colorCustomizations": {
    "statusBar.background": "#23241F",
    "statusBar.noFolderBackground": "#23241F",
    "statusBar.debuggingBackground": "#23241F"
  },
  // Disable to allow Neovim navigation.
  "workbench.list.automaticKeyboardNavigation": false,
  // Breadcrumbs
  "breadcrumbs.enabled": true,
  // Explorer
  "explorer.autoReveal": false,
  "explorer.decorations.colors": false,
  "explorer.compactFolders": false,
  "editor.suggest.showIcons": true,
  "editor.suggest.filteredTypes": {
    "keyword": false
  },
  // Files
  "files.exclude": {
    // Common
    "**/.git": true,
    "**/.gitkeep": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    // JavaScript / Node.js
    "**/node_modules": true,
    // Python
    "**/__pycache__": true,
    // Dart
    "**/.pub/": true
  },
  "files.associations": {
    // Common
    "*.eslintignore": "gitignore",
    // Sublime
    "*.sublime-settings": "json",
    "*.sublime-theme": "json",
    // Dart
    "*.analysis_options": "yaml",
    "pubspec.lock": "yaml",
    // Scala
    "*.sbt": "scala",
    // J2
    "*.ini.j2": "ini",
    "*.json.j2": "json",
    "*.yml.j2": "yaml",
    "*.yaml.j2": "yaml",
    "iptables.j2": "shellscript",
    "ip6tables.j2": "shellscript",
    "Dockerfile.j2": "dockerfile",
    "*.conf.j2": "NGINX",
    // HBS
    "*.ini.hbs": "ini",
    "*.json.hbs": "json",
    "*.yml.hbs": "yaml",
    "*.yaml.hbs": "yaml",
    "iptables.hbs": "shellscript",
    "ip6tables.hbs": "shellscript",
    "Dockerfile.hbs": "dockerfile",
    "*.conf.hbs": "NGINX",
    // Other
    "iptables": "shellscript",
    "ip6tables": "shellscript",
    "*.j2": "shellscript"
  },
  "files.eol": "\n",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.autoSave": "off",
  // Extensions
  "extensions.autoUpdate": false,
  "extensions.ignoreRecommendations": true,
  // Diff editor
  "diffEditor.ignoreTrimWhitespace": false,
  // Search
  "search.usePCRE2": true,
  // Telemetry
  "telemetry.enableTelemetry": false,
  "telemetry.enableCrashReporter": false,
  "workbench.enableExperiments": false,
  // HTML
  "html.format.wrapLineLength": 0,
  // GIT
  "git.confirmSync": false,
  /** Plugins */
  // ESLint
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  // Align
  "align.rightSeparators": [
    "=",
    "+=",
    "-=",
    "*=",
    "/=",
    "?=",
    "|=",
    "%=",
    ".=",
    "=>",
    "from"
  ],
  "align.spaceSeparators": [
    "=",
    "+=",
    "-=",
    "*=",
    "/=",
    "?=",
    "|=",
    "%=",
    ".=",
    "=>",
    "from"
  ],
  // Julia
  "julia.executablePath": "/usr/local/bin/julia",
  // Vim
  "vim.disableAnnoyingNeovimMessage": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  "vim.otherModesKeyBindingsNonRecursive": [
    // Easymotion
    {
      "before": ["<leader>", "s", "<character>"],
      "after": ["<leader>", "<leader>", "s", "<character>"]
    },
    {
      "before": ["<leader>", "f", "<character>"],
      "after": ["<leader>", "<leader>", "f", "<character>"]
    },
    {
      "before": ["<leader>", "F", "<character>"],
      "after": ["<leader>", "<leader>", "F", "<character>"]
    },
    {
      "before": ["<leader>", "t", "<character>"],
      "after": ["<leader>", "<leader>", "t", "<character>"]
    },
    {
      "before": ["<leader>", "T", "<character>"],
      "after": ["<leader>", "<leader>", "T", "<character>"]
    },
    {
      "before": ["<leader>", "w"],
      "after": ["<leader>", "<leader>", "w"]
    },
    {
      "before": ["<leader>", "e"],
      "after": ["<leader>", "<leader>", "e"]
    },
    {
      "before": ["<leader>", "g", "e"],
      "after": ["<leader>", "<leader>", "g", "e"]
    },
    {
      "before": ["<leader>", "b"],
      "after": ["<leader>", "<leader>", "b"]
    },
    {
      "before": ["<leader>", "j"],
      "after": ["<leader>", "<leader>", "j"]
    },
    {
      "before": ["<leader>", "k"],
      "after": ["<leader>", "<leader>", "k"]
    }
  ],
  "vim.textwidth": 0,
  "vim.easymotion": true,
  "vim.easymotionMarkerBackgroundColor": "#252620",
  "vim.easymotionMarkerFontFamily": "'DejaVu Sans Mono', Consolas, 'Courier New', monospace",
  "vim.easymotionMarkerFontSize": "16",
  "vim.easymotionMarkerYOffset": 16,
  "vim.easymotionMarkerHeight": 16,
  "vim.easymotionMarkerWidthPerChar": 16,
  "vim.surround": true,
  "vim.hlsearch": true,
  "vim.statusBarColorControl": true,
  "vim.statusBarColors": {
    // Tomorrow (day) colors
    "normal": "#23241F", // Black
    "insert": "#eab700", // Yellow
    "visual": "#f5871f", // Orange
    "visualline": "#f5871f", // Orange
    "visualblock": "#f5871f", // Orange
    "replace": "#c82829" // Red
  },
  // Git Lens
  "gitlens.blame.line.enabled": false,
  "gitlens.statusBar.enabled": false,
  "gitlens.codeLens.enabled": false,
  "gitlens.advanced.telemetry.enabled": false,
  "gitlens.currentLine.enabled": false,
  // REST Client
  "rest-client.enableTelemetry": false,
  // TypeScript
  "typescript.updateImportsOnFileMove.enabled": "never",
  // Go
  "go.inferGopath": true,
  "go.formatTool": "gofmt",
  "go.lintTool": "golangci-lint",
  "go.lintFlags": ["--fast"],
  "go.gopath": "~/.go",
  "go.useLanguageServer": true,
  "go.languageServerExperimentalFeatures": {
    "format": true,
    "autoComplete": true,
    "rename": true,
    "goToDefinition": true,
    "hover": true,
    "signatureHelp": true,
    "goToTypeDefinition": true,
    "goToImplementation": true,
    "documentSymbols": true,
    "workspaceSymbols": true,
    "findReferences": true,
    "diagnostics": true,
    "documentLink": true
  },
  // Nix
  "nix.enableLanguageServer": true,
  // Prettier
  "prettier.singleQuote": true,
  "prettier.arrowParens": "always",
  "prettier.semi": true,
  // VSCode Neovim
  "vscode-neovim.neovimExecutablePaths.linux": "nvim",
  /** Language specific settings */
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[go]": {
    "editor.snippetSuggestions": "none",
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "[c]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[handlebars]": {
    "editor.formatOnSave": false
  },
  "[nix]": {
    "editor.formatOnSave": false
  }
}
